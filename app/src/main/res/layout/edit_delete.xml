<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/oldItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/changedate"
        app:layout_constraintTop_toBottomOf="@+id/oldItem"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/changecomment"
        app:layout_constraintTop_toBottomOf="@+id/changedate"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/changefeeling"
        app:layout_constraintTop_toBottomOf="@+id/changecomment"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/finished"
        android:text="Update Feeling"
        app:layout_constraintTop_toBottomOf="@+id/changefeeling"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Delete"
        android:text="Delete Feeling"
        app:layout_constraintTop_toBottomOf="@+id/finished"
        />
</android.support.constraint.ConstraintLayout>